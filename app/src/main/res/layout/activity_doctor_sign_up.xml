<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:accessibilityPaneTitle="Sign Up"
    android:background="@drawable/grad2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!--android:background="@mipmap/back_login"-->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/docname"
            android:hint="Name"
            android:inputType="text"

            />

    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <!--        android:drawableLeft="@mipmap/account"-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/docmail"
            android:hint="Email-id"
            android:inputType="textEmailAddress"

            />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/docmobile"
            android:hint="Phone"
            android:inputType="phone"

            />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/doclic"
            android:hint="Licence Number"
            android:inputType="text"

            />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/docphoto"
            android:hint="Photo"

            />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/docsign"
            android:hint="Signture"

            />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:ems="10"
            android:id="@+id/docdegree_photo"
            android:hint="Degree Photo"

            />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/doc_dob"
            android:hint="Date Of Birth"
            android:inputType="date"

            />

    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/doc_degree"
            android:hint="Degree"
            android:inputType="textMultiLine"

            />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/doc_hospital"
            android:hint="Hospital Name"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/doc_address"
            android:hint="Address"
            android:inputType="textMultiLine"/>
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/doc_aadhar"
            android:hint="Aadhar Number"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_gravity="center"
        android:textColorHint="#99B3CC"
        app:passwordToggleTint="#99B3CC">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/password"
            android:hint="  Password"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC"
            app:passwordToggleTint="#99B3CC">


        <com.google.android.material.textfield.TextInputEditText

            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#99B3CC"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:id="@+id/retypepassword"
            android:hint="  Retype Password"
           android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock_black_24dp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:textColor="#99B3CC"
            android:background="@drawable/selector_xml_btn_yellow"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:text="  Sign Up  "
            android:id="@+id/signupbtn"

            />
    </LinearLayout>
</ScrollView>






